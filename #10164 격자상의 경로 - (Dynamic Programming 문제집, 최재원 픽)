#include <iostream>
 
using namespace std;
 
long long cal(int n, int m){
    int nm = n+m;
    int count = (n>m)?m:n;
    int divisor = (n>m)?m:n;
    long long ret = 1,temp1 = 1;
    for(int i=0;i<count;i++){        
        ret*=nm--;
        temp1*=divisor--;
        if(ret%temp1==0){
            ret/=temp1;
            temp1=1;
        }       
    }
    return ret;
}
 
int main(){
    int n,m,k;
    cin >> n >> m >> k;
    int col = k%m, row = k/m;
    if(k==0){
        cout << cal(n-1,m-1);
    }
    else if(k%m==0){
        cout << cal(k/m-1,m-1);
    }
    else{       
        cout << cal(row,col-1)*cal(n-row-1,m-col);
    }
    return 0;
}
